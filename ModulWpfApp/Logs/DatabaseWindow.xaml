<Window x:Class="ModulWpfApp.Logs.DatabaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="База Данных" Height="400" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="DeleteBtn" Content="Удалить" Grid.Row="0" Margin="6" Width="100" Height="32" HorizontalAlignment="Left"/>
        <DataGrid Name="TriggersDataGrid" AutoGenerateColumns="True" IsReadOnly="True" Grid.Row="1" />
    </Grid>
</Window>
