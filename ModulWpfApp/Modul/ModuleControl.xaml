<UserControl x:Class="ModulWpfApp.Modul.ModuleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="60" Width="Auto">
    <Border x:Name="ModuleBorder" BorderBrush="Gray" BorderThickness="1" CornerRadius="6" Margin="4" Padding="8" Background="White">
        <Grid>
            <ContentPresenter Content="{Binding ModuleTitle, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        </Grid>
    </Border>
</UserControl>
