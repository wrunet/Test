<Window x:Class="ModulWpfApp.Settings.TriggerSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Настройки триггера" Height="440" Width="400" WindowStartupLocation="CenterScreen" Background="#FAFAFA">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="xctk:ColorPicker">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
    </Window.Resources>
    <Border CornerRadius="10" Background="White" Padding="18" BorderBrush="#E0E0E0" BorderThickness="1">
        <DockPanel LastChildFill="True">
            <StackPanel DockPanel.Dock="Top">
                <TextBlock Text="Параметры триггера" FontWeight="Bold" FontSize="18" Margin="0,0,0,16"/>
                <GroupBox Header="Поля настроек" Margin="0,0,0,0" Padding="12">
                    <StackPanel>
                        <UniformGrid Rows="4" Columns="1" Margin="0,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                            <Border BorderBrush="#B0BEC5" BorderThickness="1" CornerRadius="4" Margin="0,0,0,8" Padding="6" Background="#F7F9FA">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Ширина:" Grid.Column="0"/>
                                    <TextBox x:Name="WidthBox" Grid.Column="1" Width="70"/>
                                    <TextBlock Text="Высота:" Grid.Column="2"/>
                                    <TextBox x:Name="HeightBox" Grid.Column="3" Width="70"/>
                                </Grid>
                            </Border>
                            <Border BorderBrush="#B0BEC5" BorderThickness="1" CornerRadius="4" Margin="0,0,0,8" Padding="6" Background="#F7F9FA">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Название:" Grid.Column="0"/>
                                    <TextBox x:Name="TitleBox" Grid.Column="1" Width="200"/>
                                </Grid>
                            </Border>
                            <Border BorderBrush="#B0BEC5" BorderThickness="1" CornerRadius="4" Margin="0,0,0,8" Padding="6" Background="#F7F9FA">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Шрифт:" Grid.Column="0"/>
                                    <ComboBox x:Name="FontBox" Grid.Column="1" MinWidth="120"/>
                                    <TextBlock Text="Цвет текста:" Grid.Column="2"/>
                                    <xctk:ColorPicker x:Name="TextColorPicker" Grid.Column="3" SelectedColorChanged="TextColorPicker_SelectedColorChanged" SelectedColor="{Binding TriggerTextColor, Mode=TwoWay}"/>
                                </Grid>
                            </Border>
                            <Border BorderBrush="#B0BEC5" BorderThickness="1" CornerRadius="4" Margin="0,0,0,8" Padding="6" Background="#F7F9FA">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Border цвет:" Grid.Column="0"/>
                                    <xctk:ColorPicker x:Name="BorderColorPicker" Grid.Column="1" SelectedColorChanged="BorderColorPicker_SelectedColorChanged" SelectedColor="{Binding TriggerBorderColor, Mode=TwoWay}"/>
                                    <TextBlock Text="Толщина:" Grid.Column="2"/>
                                    <TextBox x:Name="BorderThicknessBox" Grid.Column="3" Width="70"/>
                                </Grid>
                            </Border>
                            <Border BorderBrush="#B0BEC5" BorderThickness="1" CornerRadius="4" Margin="0,0,0,0" Padding="6" Background="#F7F9FA">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Углы:"/>
                                    <ComboBox x:Name="CornerTypeBox" MinWidth="140" Margin="8,0,0,0">
                                        <ComboBoxItem Content="Острые"/>
                                        <ComboBoxItem Content="Закругленные"/>
                                    </ComboBox>
                                </StackPanel>
                            </Border>
                        </UniformGrid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
            <Button x:Name="SaveBtn" Content="Сохранить" Width="160" DockPanel.Dock="Bottom" Margin="0,24,0,0"/>
        </DockPanel>
    </Border>
</Window>
